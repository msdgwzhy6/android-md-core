<resources>

  <declare-styleable name="MdColor">

    <!-- used to represent primary / main interface elements for a user -->
    <attr name="mdColor_primaryPalette" format="color|reference" />
    <attr name="mdColor_primaryPalette_dark" format="color|reference" />
    <attr name="mdColor_primaryPalette_light" format="color|reference" />

    <!-- used to represent secondary interface elements for a user -->
    <attr name="mdColor_accentPalette" format="color|reference" />
    <attr name="mdColor_accentPalette_dark" format="color|reference" />
    <attr name="mdColor_accentPalette_light" format="color|reference" />

    <!-- used to represent interface elements that the user should be careful of -->
    <attr name="mdColor_warnPalette" format="color|reference" />
    <attr name="mdColor_warnPalette_dark" format="color|reference" />
    <attr name="mdColor_warnPalette_light" format="color|reference" />

    <!-- used to represent application background for a user -->
    <attr name="mdColor_backgroundPalette" format="color|reference" />
    <attr name="mdColor_backgroundPalette_dark" format="color|reference" />
    <attr name="mdColor_backgroundPalette_light" format="color|reference" />

